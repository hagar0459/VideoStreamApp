<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tobeapps.intigral.View.Activity.MainActivity">

    <RelativeLayout
        android:id="@+id/right_layout_container"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@android:color/white"
        android:visibility="invisible">

        <include layout="@layout/content_menu_right" />

    </RelativeLayout>

    <FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.devbrackets.android.exomedia.ui.widget.VideoView
            android:id="@+id/video_play_activity_video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:useDefaultControls="true"
            app:useTextureViewBacking="true" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/left_layout_container"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@android:color/white"
        android:visibility="invisible">

        <include layout="@layout/content_menu_left" />
    </RelativeLayout>
</RelativeLayout>
