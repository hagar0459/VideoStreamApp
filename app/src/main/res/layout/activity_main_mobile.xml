<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="tobeapps.intigral.View.Activity.MainActivity">

    <include

        android:id="@+id/tool_bar"
        layout="@layout/tool_bar" />

    <com.jkb.slidemenu.SlideMenuLayout
        android:id="@+id/mainSlideMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        app:slideMode="right">

        <include layout="@layout/content_menu_pager" />

        <include layout="@layout/content_menu_content" />
    </com.jkb.slidemenu.SlideMenuLayout>


</LinearLayout>

